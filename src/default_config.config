HEIGHT=42

# Entry and exit coordinates (format: x,y)
ENTRY=0,0
EXIT=41,41

# Output file for the generated maze
OUTPUT_FILE=maze.txt

# Generate a perfect maze
PERFECT=True

# Path to the icon file used in the display
